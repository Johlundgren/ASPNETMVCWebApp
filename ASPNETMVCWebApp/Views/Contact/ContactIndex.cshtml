@model ContactRequestViewModel
@{
    ViewData["Title"] = "Contact";
}
<section class="contact">
    <h1>Contact Us</h1>
    <div class="container">
        <div class="email-us">
            <div class="email-box">
                <div class="emailicon">
                    <i class="fa-regular fa-envelope"></i>
                </div>
                <div class="content">
                    <h4>Email us</h4>
                    <p>Please feel free to drop us a line. We will respond as soon as possible.</p>
                    <a asp-action="ContactIndex" asp-controller="Contact">Leave a message <i class="fa-solid fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="email-box">
                <div class="emailicon">
                    <i class="fa-light fa-users-medical"></i>
                </div>
                <div class="content">
                    <h4>Careers</h4>
                    <p>Sit ac ipsum leo lorem magna nunc mattis maecenas non vestibulum.</p>
                    <a asp-action="ContactIndex" asp-controller="Contact">Send an application <i class="fa-solid fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="contact-form">
            <form action="#" method="POST">
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" required>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="service">Service (Optional)</label>
                    <select id="service" name="service">
                        <option value="">Please select</option>
                        <option value="consultation">Consultation</option>
                        <option value="support">Support</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="submit-button">Send Contact Request</button>
                </div>
            </form>
        </div>
    </div>
    <img src="~/images/mapimage.svg" />
</section>