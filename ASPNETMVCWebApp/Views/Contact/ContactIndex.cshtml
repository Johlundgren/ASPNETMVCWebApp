@model ContactRequestViewModel
@{
    ViewData["Title"] = "Contact";
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
<section class="contact">
    <h1>Contact Us</h1>
    <div class="container">
        <div class="email-us">
            <div class="email-box">
                <div class="emailicon">
                    <i class="fa-regular fa-envelope"></i>
                </div>
                <div class="content">
                    <h4>Email us</h4>
                    <p>Please feel free to drop us a line. We will respond as soon as possible.</p>
                    <a asp-action="error" asp-controller="error">Leave a message <i class="fa-solid fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="email-box">
                <div class="emailicon">
                    <i class="fa-light fa-users-medical"></i>
                </div>
                <div class="content">
                    <h4>Careers</h4>
                    <p>Sit ac ipsum leo lorem magna nunc mattis maecenas non vestibulum.</p>
                    <a asp-action="error" asp-controller="error">Send an application <i class="fa-solid fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="contact-page">
            <div class="form-container">
                <h1>Get In Contact With Us</h1>
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="message success">@successMessage</div>
                }
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="message error">@errorMessage</div>
                }
                <form asp-action="ContactIndex" method="post">
                    <div class="form-group">
                        <label asp-for="FullName">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email Address</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Service">Service (Optional)</label>
                        <select asp-for="Service" class="form-control" asp-items="ViewBag.ServiceOptions"></select>
                        <span asp-validation-for="Service" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message">Message</label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
    <img src="~/images/mapimage.svg" />
</section>